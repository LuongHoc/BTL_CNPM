@section Scripts {
    <script>
        // Search functionality
        document.addEventListener('DOMContentLoaded', function () {
            const searchInput = document.getElementById('tourSearch');
            if (!searchInput) return;

            searchInput.addEventListener('keyup', function () {
                const keyword = this.value.toLowerCase().trim();
                const rows = document.querySelectorAll('.tour-row');

                rows.forEach(function (row) {
                    const text = row.innerText.toLowerCase();
                    row.style.display = text.includes(keyword) ? '' : 'none';
                });
            });
        });

        // Delete modal functions
        function showDeleteModal(button) {
            const tourId = button.getAttribute('data-tour-id');
            const tourName = button.getAttribute('data-tour-name');

            document.getElementById('deleteTourName').textContent = tourName;
            document.getElementById('deleteFormId').value = tourId;
            document.getElementById('deleteModal').classList.add('show');
        }

        function closeDeleteModal() {
            document.getElementById('deleteModal').classList.remove('show');
        }

        // Close modal when clicking outside
        document.getElementById('deleteModal')?.addEventListener('click', function(e) {
            if (e.target === this) {
                closeDeleteModal();
            }
        });

        // Close modal with ESC key
        document.addEventListener('keydown', function(e) {
            if (e.key === 'Escape') {
                closeDeleteModal();
            }
        });
    </script>
}
