@{
    ViewData["Title"] = "Quản trị hệ thống";
}

<!-- Dashboard Header -->
<div class="dashboard-header">
    <div class="header-content">
        <div>
            <h1 class="dashboard-title">
                <i class="bi bi-speedometer2 me-2"></i>
                Trang quản trị
            </h1>
            <p class="dashboard-subtitle">Tổng quan hệ thống và thống kê</p>
        </div>
        <div class="header-actions">
            <button class="btn-refresh" onclick="location.reload()">
                <i class="bi bi-arrow-clockwise"></i>
                <span>Làm mới</span>
            </button>
            <div class="date-display">
                <i class="bi bi-calendar3"></i>
                <span id="currentDate"></span>
            </div>
        </div>
    </div>
</div>

<!-- Statistics Cards -->
<div class="stats-section">
    <div class="row g-4">
        <!-- Total Tours -->
        <div class="col-xl-3 col-md-6">
            <div class="stat-card stat-card-blue">
                <div class="stat-card-body">
                    <div class="stat-icon">
                        <i class="bi bi-compass"></i>
                    </div>
                    <div class="stat-content">
                        <div class="stat-label">Tổng số tour</div>
                        <div class="stat-value" data-target="@ViewBag.SoTour">0</div>
                    </div>
                </div>
                <div class="stat-card-footer">
                    <i class="bi bi-graph-up-arrow me-2"></i>
                    <span>Tất cả tour trong hệ thống</span>
                </div>
            </div>
        </div>

        <!-- Total Orders -->
        <div class="col-xl-3 col-md-6">
            <div class="stat-card stat-card-purple">
                <div class="stat-card-body">
                    <div class="stat-icon">
                        <i class="bi bi-receipt"></i>
                    </div>
                    <div class="stat-content">
                        <div class="stat-label">Tổng số đơn</div>
                        <div class="stat-value" data-target="@ViewBag.SoDon">0</div>
                    </div>
                </div>
                <div class="stat-card-footer">
                    <i class="bi bi-bag-check me-2"></i>
                    <span>Đơn đặt tour tổng cộng</span>
                </div>
            </div>
        </div>

        <!-- Pending Orders -->
        <div class="col-xl-3 col-md-6">
            <div class="stat-card stat-card-orange">
                <div class="stat-card-body">
                    <div class="stat-icon">
                        <i class="bi bi-clock-history"></i>
                    </div>
                    <div class="stat-content">
                        <div class="stat-label">Đơn chờ xác nhận</div>
                        <div class="stat-value" data-target="@ViewBag.SoDonCho">0</div>
                    </div>
                </div>
                <div class="stat-card-footer">
                    <i class="bi bi-exclamation-circle me-2"></i>
                    <span>Cần xử lý sớm</span>
                </div>
            </div>
        </div>

        <!-- Revenue -->
        <div class="col-xl-3 col-md-6">
            <div class="stat-card stat-card-green">
                <div class="stat-card-body">
                    <div class="stat-icon">
                        <i class="bi bi-currency-dollar"></i>
                    </div>
                    <div class="stat-content">
                        <div class="stat-label">Doanh thu</div>
                        <div class="stat-value-revenue">
                            @string.Format("{0:N0}", ViewBag.DoanhThu) đ
                        </div>
                    </div>
                </div>
                <div class="stat-card-footer">
                    <i class="bi bi-trophy me-2"></i>
                    <span>Đơn hoàn tất</span>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Quick Actions -->
<div class="quick-actions-section">
    <div class="section-header-admin">
        <h3>
            <i class="bi bi-lightning-charge me-2"></i>
            Hành động nhanh
        </h3>
        <p>Truy cập nhanh các chức năng quản trị</p>
    </div>

    <div class="row g-4">
        <!-- Tour Management -->
        <div class="col-lg-3 col-md-6">
            <a asp-action="DanhSachTour" class="action-card action-card-primary">
                <div class="action-icon">
                    <i class="bi bi-map"></i>
                </div>
                <div class="action-content">
                    <h4>Quản lý tour</h4>
                    <p>Thêm, sửa, xóa tour du lịch</p>
                </div>
                <div class="action-arrow">
                    <i class="bi bi-arrow-right"></i>
                </div>
            </a>
        </div>

        <!-- Order Management -->
        <div class="col-lg-3 col-md-6">
            <a asp-action="DanhSachDon" class="action-card action-card-purple">
                <div class="action-icon">
                    <i class="bi bi-clipboard-check"></i>
                </div>
                <div class="action-content">
                    <h4>Quản lý đơn</h4>
                    <p>Xem và xử lý đơn đặt tour</p>
                </div>
                <div class="action-arrow">
                    <i class="bi bi-arrow-right"></i>
                </div>
            </a>
        </div>

        <!-- Staff Management -->
        <div class="col-lg-3 col-md-6">
            <a asp-action="DanhSachNhanVien" class="action-card action-card-info">
                <div class="action-icon">
                    <i class="bi bi-people"></i>
                </div>
                <div class="action-content">
                    <h4>Quản lý nhân viên</h4>
                    <p>Quản lý tài khoản nhân viên</p>
                </div>
                <div class="action-arrow">
                    <i class="bi bi-arrow-right"></i>
                </div>
            </a>
        </div>

        <!-- Revenue Report -->
        <div class="col-lg-3 col-md-6">
            <a asp-action="BaoCaoDoanhThu" class="action-card action-card-success">
                <div class="action-icon">
                    <i class="bi bi-graph-up"></i>
                </div>
                <div class="action-content">
                    <h4>Báo cáo doanh thu</h4>
                    <p>Thống kê và phân tích</p>
                </div>
                <div class="action-arrow">
                    <i class="bi bi-arrow-right"></i>
                </div>
            </a>
        </div>
    </div>
</div>

<!-- System Overview -->
<div class="overview-section">
    <div class="row g-4">
        <!-- Recent Activity -->
        <div class="col-lg-8">
            <div class="overview-card">
                <div class="card-header-admin">
                    <h4>
                        <i class="bi bi-activity me-2"></i>
                        Hoạt động gần đây
                    </h4>
                    <button class="btn-view-all">
                        Xem tất cả
                        <i class="bi bi-arrow-right ms-1"></i>
                    </button>
                </div>
                <div class="card-body-admin">
                    <div class="activity-list">
                        <div class="activity-item">
                            <div class="activity-icon success">
                                <i class="bi bi-check-circle"></i>
                            </div>
                            <div class="activity-content">
                                <h5>Đơn mới được đặt</h5>
                                <p>Khách hàng Nguyễn Văn A đã đặt tour "Du lịch Đà Nẵng"</p>
                                <span class="activity-time">5 phút trước</span>
                            </div>
                        </div>

                        <div class="activity-item">
                            <div class="activity-icon info">
                                <i class="bi bi-pencil-square"></i>
                            </div>
                            <div class="activity-content">
                                <h5>Tour được cập nhật</h5>
                                <p>Admin đã cập nhật thông tin "Tour Phú Quốc 3N2Đ"</p>
                                <span class="activity-time">15 phút trước</span>
                            </div>
                        </div>

                        <div class="activity-item">
                            <div class="activity-icon warning">
                                <i class="bi bi-clock"></i>
                            </div>
                            <div class="activity-content">
                                <h5>Đơn chờ xác nhận</h5>
                                <p>3 đơn đang chờ xác nhận từ nhân viên</p>
                                <span class="activity-time">30 phút trước</span>
                            </div>
                        </div>

                        <div class="activity-item">
                            <div class="activity-icon primary">
                                <i class="bi bi-star"></i>
                            </div>
                            <div class="activity-content">
                                <h5>Đánh giá mới</h5>
                                <p>Tour "Hạ Long 2N1Đ" nhận được đánh giá 5 sao</p>
                                <span class="activity-time">1 giờ trước</span>
                            </div>
                        </div>

                        <div class="activity-item">
                            <div class="activity-icon success">
                                <i class="bi bi-cash-coin"></i>
                            </div>
                            <div class="activity-content">
                                <h5>Thanh toán thành công</h5>
                                <p>Đơn #DT2024001 đã được thanh toán</p>
                                <span class="activity-time">2 giờ trước</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- System Info -->
        <div class="col-lg-4">
            <div class="overview-card">
                <div class="card-header-admin">
                    <h4>
                        <i class="bi bi-info-circle me-2"></i>
                        Thông tin hệ thống
                    </h4>
                </div>
                <div class="card-body-admin">
                    <div class="system-info-list">
                        <div class="system-info-item">
                            <div class="info-icon">
                                <i class="bi bi-server"></i>
                            </div>
                            <div class="info-content">
                                <span class="info-label">Trạng thái</span>
                                <span class="info-value">
                                    <span class="status-badge online">Online</span>
                                </span>
                            </div>
                        </div>

                        <div class="system-info-item">
                            <div class="info-icon">
                                <i class="bi bi-people"></i>
                            </div>
                            <div class="info-content">
                                <span class="info-label">Người dùng online</span>
                                <span class="info-value">24 người</span>
                            </div>
                        </div>

                        <div class="system-info-item">
                            <div class="info-icon">
                                <i class="bi bi-calendar-event"></i>
                            </div>
                            <div class="info-content">
                                <span class="info-label">Ngày cập nhật</span>
                                <span class="info-value">@DateTime.Now.ToString("dd/MM/yyyy")</span>
                            </div>
                        </div>

                        <div class="system-info-item">
                            <div class="info-icon">
                                <i class="bi bi-hdd"></i>
                            </div>
                            <div class="info-content">
                                <span class="info-label">Dung lượng</span>
                                <span class="info-value">2.4 GB / 10 GB</span>
                            </div>
                        </div>
                    </div>

                    <div class="system-progress">
                        <div class="progress-label">
                            <span>Hiệu suất hệ thống</span>
                            <span>85%</span>
                        </div>
                        <div class="progress-bar-custom">
                            <div class="progress-fill" style="width: 85%"></div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Quick Stats -->
            <div class="overview-card mt-4">
                <div class="card-header-admin">
                    <h4>
                        <i class="bi bi-bar-chart me-2"></i>
                        Thống kê nhanh
                    </h4>
                </div>
                <div class="card-body-admin">
                    <div class="quick-stat-item">
                        <span class="quick-stat-label">Tour phổ biến nhất</span>
                        <span class="quick-stat-value">Du lịch Đà Nẵng</span>
                    </div>
                    <div class="quick-stat-item">
                        <span class="quick-stat-label">Khách hàng mới (tháng)</span>
                        <span class="quick-stat-value">147 người</span>
                    </div>
                    <div class="quick-stat-item">
                        <span class="quick-stat-label">Tỷ lệ hoàn thành</span>
                        <span class="quick-stat-value">92%</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
