            font-size: 1.5rem;
            font-weight: 700;
            color: #1e293b;
            margin-bottom: 0.5rem;
        }

        .empty-report-state p {
            font-size: 1rem;
            color: #64748b;
            margin-bottom: 0.5rem;
        }

        .empty-hint {
            font-size: 0.9rem;
            color: #94a3b8;
        }

        /* ====== REPORT TABLE ====== */
        .table-responsive {
            overflow-x: auto;
        }

        .report-table {
            width: 100%;
            border-collapse: collapse;
        }

            .report-table thead {
                background: #f8fafc;
            }

            .report-table th {
                padding: 1rem;
                border-bottom: 2px solid #e2e8f0;
                font-weight: 600;
                font-size: 0.875rem;
                color: #64748b;
                white-space: nowrap;
            }

        .th-report-content {
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

            .th-report-content i {
                color: #94a3b8;
            }

        .report-table tbody tr {
            border-bottom: 1px solid #f0f0f0;
            transition: all 0.3s ease;
        }

            .report-table tbody tr:hover {
                background: #f8fafc;
            }

        .report-table td {
            padding: 1.25rem 1rem;
            font-size: 0.95rem;
        }

        .tour-code-report {
