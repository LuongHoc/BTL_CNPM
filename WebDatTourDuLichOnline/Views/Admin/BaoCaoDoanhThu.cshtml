@model IEnumerable<WebDatTourDuLichOnline.Models.BaoCaoDoanhThuViewModel>

@{
    ViewData["Title"] = "Báo cáo doanh thu theo tour";

    string tuNgay = ViewBag.TuNgay as string ?? "";
    string denNgay = ViewBag.DenNgay as string ?? "";
    decimal tongDoanhThu = ViewBag.TongDoanhThu != null ? (decimal)ViewBag.TongDoanhThu : 0;
}

<!-- Page Header -->
<div class="page-header-report">
    <div class="header-content-report">
        <div class="header-icon-report">
            <i class="bi bi-graph-up"></i>
        </div>
        <div>
            <h1 class="page-title-report">Báo cáo doanh thu</h1>
            <p class="page-subtitle-report">Thống kê doanh thu theo tour và thời gian</p>
        </div>
    </div>
    <div class="header-actions-report">
        <button class="btn-export-report">
            <i class="bi bi-file-earmark-excel me-2"></i>
            Xuất Excel
        </button>
        <button class="btn-print-report" onclick="window.print()">
            <i class="bi bi-printer me-2"></i>
            In báo cáo
        </button>
    </div>
</div>

<!-- Filter Section -->
<div class="filter-report-section">
    <form method="get" class="filter-report-form">
        <div class="filter-report-header">
            <i class="bi bi-calendar-range me-2"></i>
            <h3>Chọn khoảng thời gian</h3>
        </div>
        <div class="filter-report-body">
            <div class="date-input-group">
                <label class="date-label">
                    <i class="bi bi-calendar-event me-2"></i>
                    Từ ngày
                </label>
                <input type="date" name="tuNgay" value="@tuNgay" class="date-input" />
            </div>

            <div class="date-separator">
                <i class="bi bi-arrow-right"></i>
            </div>

            <div class="date-input-group">
                <label class="date-label">
                    <i class="bi bi-calendar-check me-2"></i>
                    Đến ngày
                </label>
                <input type="date" name="denNgay" value="@denNgay" class="date-input" />
            </div>

            <button type="submit" class="btn-view-report">
                <i class="bi bi-search me-2"></i>
                Xem báo cáo
            </button>
        </div>
    </form>
</div>

<!-- Summary Cards -->
@if (Model.Any())
{
    <div class="summary-cards-report">
        <div class="summary-card-report total-revenue">
            <div class="summary-icon-report">
                <i class="bi bi-currency-dollar"></i>
            </div>
            <div class="summary-content-report">
                <span class="summary-label-report">Tổng doanh thu</span>
                <span class="summary-value-report">@tongDoanhThu.ToString("N0") đ</span>
            </div>
        </div>

        <div class="summary-card-report total-orders">
            <div class="summary-icon-report">
                <i class="bi bi-receipt"></i>
            </div>
            <div class="summary-content-report">
                <span class="summary-label-report">Tổng số đơn</span>
                <span class="summary-value-report">@Model.Sum(m => m.SoDon)</span>
            </div>
        </div>

        <div class="summary-card-report total-guests">
            <div class="summary-icon-report">
                <i class="bi bi-people"></i>
            </div>
            <div class="summary-content-report">
                <span class="summary-label-report">Tổng khách</span>
                <span class="summary-value-report">@Model.Sum(m => m.TongSoKhach)</span>
            </div>
        </div>

        <div class="summary-card-report total-tours">
            <div class="summary-icon-report">
                <i class="bi bi-pin-map"></i>
            </div>
            <div class="summary-content-report">
                <span class="summary-label-report">Tour có doanh thu</span>
                <span class="summary-value-report">@Model.Count()</span>
            </div>
        </div>
    </div>
}

<!-- Report Table -->
<div class="report-table-container">
    <div class="report-table-header">
        <h3>
            <i class="bi bi-table me-2"></i>
            Chi tiết doanh thu theo tour
        </h3>
        @if (!string.IsNullOrEmpty(tuNgay) && !string.IsNullOrEmpty(denNgay))
        {
            <span class="report-period">
                <i class="bi bi-calendar3 me-2"></i>
                Từ @DateTime.Parse(tuNgay).ToString("dd/MM/yyyy") đến @DateTime.Parse(denNgay).ToString("dd/MM/yyyy")
            </span>
        }
    </div>

    @if (!Model.Any())
    {
        <div class="empty-report-state">
            <div class="empty-report-icon">
                <i class="bi bi-inbox"></i>
            </div>
            <h4>Không có dữ liệu</h4>
            <p>Không có đơn nào đã thanh toán trong khoảng thời gian này.</p>
            <p class="empty-hint">Vui lòng chọn khoảng thời gian khác hoặc kiểm tra lại dữ liệu.</p>
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="report-table">
                <thead>
                    <tr>
                        <th>
                            <div class="th-report-content">
                                <i class="bi bi-tag"></i>
                                <span>Mã tour</span>
                            </div>
                        </th>
                        <th>
                            <div class="th-report-content">
                                <i class="bi bi-pin-map"></i>
                                <span>Tên tour</span>
                            </div>
                        </th>
                        <th class="text-end">
                            <div class="th-report-content justify-content-end">
                                <i class="bi bi-receipt"></i>
                                <span>Số đơn</span>
                            </div>
                        </th>
                        <th class="text-end">
                            <div class="th-report-content justify-content-end">
                                <i class="bi bi-people"></i>
                                <span>Tổng khách</span>
                            </div>
                        </th>
                        <th class="text-end">
                            <div class="th-report-content justify-content-end">
                                <i class="bi bi-currency-dollar"></i>
                                <span>Doanh thu</span>
                            </div>
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.OrderByDescending(m => m.TongDoanhThu))
                    {
                        <tr class="report-row">
                            <td>
                                <div class="tour-code-report">
                                    <i class="bi bi-tag-fill"></i>
                                    <strong>@item.MaTour</strong>
                                </div>
                            </td>
                            <td>
                                <div class="tour-name-report">@item.TenTour</div>
                            </td>
                            <td class="text-end">
                                <span class="order-count-badge">@item.SoDon đơn</span>
                            </td>
                            <td class="text-end">
                                <span class="guest-count-badge">@item.TongSoKhach khách</span>
                            </td>
                            <td class="text-end">
                                <div class="revenue-amount">@item.TongDoanhThu.ToString("N0") đ</div>
                            </td>
                        </tr>
                    }
                </tbody>
                <tfoot>
                    <tr class="total-row">
                        <td colspan="4" class="text-end">
                            <strong>
                                <i class="bi bi-calculator me-2"></i>
                                TỔNG DOANH THU
                            </strong>
                        </td>
                        <td class="text-end">
                            <div class="total-revenue-amount">@tongDoanhThu.ToString("N0") đ</div>
                        </td>
                    </tr>
                </tfoot>
            </table>
        </div>

        <!-- Chart Section -->
        <div class="chart-section">
            <div class="chart-header">
                <h4>
                    <i class="bi bi-bar-chart me-2"></i>
                    Biểu đồ doanh thu
                </h4>
            </div>
            <div class="chart-container">
                <canvas id="revenueChart"></canvas>
            </div>
        </div>
    }
</div>

