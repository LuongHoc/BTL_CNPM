            .btn-print-report {
                width: 100%;
                justify-content: center;
            }

            .filter-report-body {
                flex-direction: column;
            }

            .date-separator {
                transform: rotate(90deg);
                padding: 0;
            }

            .btn-view-report {
                width: 100%;
                justify-content: center;
            }

            .summary-cards-report {
                grid-template-columns: 1fr;
            }

            .report-table-header {
                flex-direction: column;
                align-items: flex-start;
                gap: 1rem;
            }

            .chart-container {
                height: 300px;
            }
        }

        @@media print {
            .page-header-report,
            .filter-report-section,
            .header-actions-report,
            .btn-view-report {
                display: none;
            }
        }
    </style>
}

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        @if (Model.Any())
        {
                <text>
                // Prepare chart data
                const chartData = {
                    labels: [@Html.Raw(string.Join(",", Model.Select(m => $"'{m.TenTour}'")))],
                    datasets: [{
                        label: 'Doanh thu (VNĐ)',
                        data: [@Html.Raw(string.Join(",", Model.Select(m => m.TongDoanhThu)))],
                        backgroundColor: [
                            'rgba(16, 185, 129, 0.8)',
                            'rgba(59, 130, 246, 0.8)',
                            'rgba(245, 158, 11, 0.8)',
                            'rgba(139, 92, 246, 0.8)',
                            'rgba(239, 68, 68, 0.8)',
                            'rgba(6, 182, 212, 0.8)'
                        ],
                        borderColor: [
                            'rgba(16, 185, 129, 1)',
                            'rgba(59, 130, 246, 1)',
                            'rgba(245, 158, 11, 1)',
                            'rgba(139, 92, 246, 1)',
                            'rgba(239, 68, 68, 1)',
                            'rgba(6, 182, 212, 1)'
                        ],
                        borderWidth: 2
                    }]
                };

                // Create chart
                const ctx = document.getElementById('revenueChart').getContext('2d');
                new Chart(ctx, {
                    type: 'bar',
                    data: chartData,
                    options: {
                        responsive: true,
                        maintainAspectRatio: false,
                        plugins: {
                            legend: {
                                display: false
                            },
                            tooltip: {
                                callbacks: {
                                    label: function(context) {
                                        return 'Doanh thu: ' + context.parsed.y.toLocaleString('vi-VN') + ' đ';
                                    }
                                }
                            }
                        },
                        scales: {
                            y: {
                                beginAtZero: true,
                                ticks: {
                                    callback: function(value) {
                                        return value.toLocaleString('vi-VN') + ' đ';
                                    }
                                }
                            }
                        }
                    }
                });
                </text>
        }
    </script>
}