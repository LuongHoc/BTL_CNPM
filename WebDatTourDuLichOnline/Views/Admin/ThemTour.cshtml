@model WebDatTourDuLichOnline.Models.Tour

@{
    ViewData["Title"] = "Thêm tour";
}

<style>
    /* ========================================
           MODERN TOUR FORM STYLING
           ======================================== */

    /* Root Variables for Easy Customization */
    :root {
        --primary-color: #2563eb;
        --primary-dark: #1e40af;
        --primary-light: #3b82f6;
        --secondary-color: #8b5cf6;
        --accent-color: #ec4899;
        --success-color: #10b981;
        --warning-color: #f59e0b;
        --danger-color: #ef4444;
        --dark-color: #1f2937;
        --light-gray: #f9fafb;
        --medium-gray: #e5e7eb;
        --text-primary: #111827;
        --text-secondary: #6b7280;
        --border-radius: 12px;
        --transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        --shadow-sm: 0 1px 2px 0 rgba(0, 0, 0, 0.05);
        --shadow-md: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
        --shadow-lg: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
        --shadow-xl: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
    }

    /* Page Container Styling */
    .tour-form-container {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        min-height: 100vh;
        padding: 40px 20px;
        position: relative;
        overflow: hidden;
    }

        .tour-form-container::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1440 320"><path fill="%23ffffff" fill-opacity="0.1" d="M0,96L48,112C96,128,192,160,288,160C384,160,480,128,576,122.7C672,117,768,139,864,138.7C960,139,1056,117,1152,106.7C1248,96,1344,96,1392,96L1440,96L1440,320L1392,320C1344,320,1248,320,1152,320C1056,320,960,320,864,320C768,320,672,320,576,320C480,320,384,320,288,320C192,320,96,320,48,320L0,320Z"></path></svg>') no-repeat bottom;
            background-size: cover;
            opacity: 0.5;
        }

    /* Main Form Wrapper */
    .form-wrapper {
        max-width: 1400px;
        margin: 0 auto;
        position: relative;
        z-index: 1;
    }

    /* Header Section */
    .form-header {
        background: white;
        border-radius: var(--border-radius);
        padding: 30px 40px;
        margin-bottom: 30px;
        box-shadow: var(--shadow-xl);
        position: relative;
        overflow: hidden;
    }

        .form-header::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 5px;
            background: linear-gradient(90deg, var(--primary-color), var(--secondary-color), var(--accent-color));
        }

        .form-header h2 {
            margin: 0;
            font-size: 2.5rem;
            font-weight: 700;
            background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            display: inline-flex;
            align-items: center;
            gap: 15px;
        }

    .form-subtitle {
        margin-top: 10px;
        color: var(--text-secondary);
        font-size: 1rem;
    }

    /* Main Form Card */
    .form-main-card {
        background: white;
        border-radius: var(--border-radius);
        padding: 40px;
        box-shadow: var(--shadow-xl);
        animation: slideUp 0.5s ease-out;
    }

    @@keyframes slideUp {
        from {
            opacity: 0;
            transform: translateY(30px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    /* Section Headers */
    .section-header {
        display: flex;
        align-items: center;
        gap: 12px;
        margin-bottom: 25px;
        padding-bottom: 15px;
        border-bottom: 3px solid var(--light-gray);
        position: relative;
    }

        .section-header::after {
            content: '';
            position: absolute;
            bottom: -3px;
            left: 0;
            width: 80px;
            height: 3px;
            background: linear-gradient(90deg, var(--primary-color), var(--secondary-color));
            border-radius: 2px;
        }

    .section-icon {
        width: 36px;
        height: 36px;
        background: linear-gradient(135deg, var(--primary-color), var(--primary-light));
        border-radius: 8px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.1rem;
        box-shadow: var(--shadow-sm);
    }

    .section-title {
        font-size: 1.5rem;
        font-weight: 600;
        color: var(--text-primary);
        margin: 0;
    }

    /* Form Groups */
    .form-group {
        margin-bottom: 25px;
        position: relative;
    }

    .form-label {
        display: flex;
        align-items: center;
        gap: 8px;
        font-weight: 600;
        color: var(--text-primary);
        margin-bottom: 10px;
        font-size: 0.95rem;
    }

    /* Input Fields */
    .form-control,
    .form-select {
        border: 2px solid var(--medium-gray);
        border-radius: 10px;
        padding: 12px 16px;
        font-size: 1rem;
        transition: var(--transition);
        background: white;
        width: 100%;
    }

        .form-control:focus,
        .form-select:focus {
            border-color: var(--primary-color);
            box-shadow: 0 0 0 4px rgba(37, 99, 235, 0.1);
            outline: none;
            transform: translateY(-2px);
        }

        .form-control:hover,
        .form-select:hover {
            border-color: var(--primary-light);
        }

    /* Textarea Special Styling */
    textarea.form-control {
        resize: vertical;
        min-height: 120px;
        font-family: inherit;
        line-height: 1.6;
    }

    /* Input with Icons */
    .input-icon-wrapper {
        position: relative;
    }

        .input-icon-wrapper .form-control,
        .input-icon-wrapper .form-select {
            padding-left: 45px;
        }

    .input-icon {
        position: absolute;
        left: 15px;
        top: 50%;
        transform: translateY(-50%);
        font-size: 1.1rem;
        color: var(--text-secondary);
        pointer-events: none;
        transition: var(--transition);
        opacity: 0.7;
    }

    .input-icon-wrapper .form-control:focus ~ .input-icon,
    .input-icon-wrapper .form-select:focus ~ .input-icon {
        color: var(--primary-color);
        opacity: 1;
    }

    /* Number Input Styling */
    input[type="number"] {
        -moz-appearance: textfield;
    }

        input[type="number"]::-webkit-outer-spin-button,
        input[type="number"]::-webkit-inner-spin-button {
            -webkit-appearance: none;
            margin: 0;
        }

    /* Date Input Special Styling */
    input[type="date"] {
        position: relative;
        cursor: pointer;
    }

        input[type="date"]::-webkit-calendar-picker-indicator {
            cursor: pointer;
            opacity: 0.6;
            transition: var(--transition);
        }

        input[type="date"]:hover::-webkit-calendar-picker-indicator {
            opacity: 1;
        }

    /* File Input Styling */
    .file-upload-wrapper {
        position: relative;
    }

    .file-upload-box {
        border: 2px dashed var(--medium-gray);
        border-radius: 10px;
        padding: 30px;
        text-align: center;
        background: var(--light-gray);
        transition: var(--transition);
        cursor: pointer;
    }

        .file-upload-box:hover {
            border-color: var(--primary-color);
            background: rgba(37, 99, 235, 0.05);
        }

        .file-upload-box input[type="file"] {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            opacity: 0;
            cursor: pointer;
        }

    .file-upload-icon {
        font-size: 2.5rem;
        margin-bottom: 10px;
        color: var(--primary-color);
        opacity: 0.8;
    }

    .file-upload-text {
        font-size: 1rem;
        color: var(--text-secondary);
        margin-bottom: 5px;
    }

    .file-upload-hint {
        font-size: 0.85rem;
        color: var(--text-secondary);
    }

    /* Switch/Toggle Styling */
    .form-switch {
        padding-left: 0;
        display: flex;
        align-items: center;
        gap: 12px;
        background: var(--light-gray);
        padding: 20px 25px;
        border-radius: 10px;
        border: 2px solid var(--medium-gray);
        transition: var(--transition);
    }

        .form-switch:hover {
            background: rgba(37, 99, 235, 0.05);
            border-color: var(--primary-light);
        }

    .form-check-input {
        width: 60px;
        height: 32px;
        cursor: pointer;
        background-color: var(--medium-gray);
        border: none;
        transition: var(--transition);
        position: relative;
    }

        .form-check-input:checked {
            background-color: var(--success-color);
            border-color: var(--success-color);
        }

        .form-check-input:focus {
            box-shadow: 0 0 0 4px rgba(16, 185, 129, 0.2);
        }

    .form-check-label {
        font-weight: 600;
        font-size: 1.1rem;
        color: var(--text-primary);
        cursor: pointer;
        margin: 0;
    }

    /* Validation Messages */
    .text-danger {
        color: var(--danger-color);
        font-size: 0.875rem;
        margin-top: 5px;
        display: block;
        font-weight: 500;
    }

    @@keyframes shake {
        0%, 100% {
            transform: translateX(0);
        }

        25% {
            transform: translateX(-5px);
        }

        75% {
            transform: translateX(5px);
        }
    }

    .text-muted {
        color: var(--text-secondary);
        font-size: 0.875rem;
        margin-top: 5px;
        font-style: italic;
    }

    /* Grid System Enhancements */
    .row {
        margin-left: -15px;
        margin-right: -15px;
    }

        .row > [class*='col-'] {
            padding-left: 15px;
            padding-right: 15px;
        }

    /* Card Sections */
    .info-card {
        background: linear-gradient(135deg, rgba(37, 99, 235, 0.05), rgba(139, 92, 246, 0.05));
        border-left: 4px solid var(--primary-color);
        padding: 20px;
        border-radius: 10px;
        margin-bottom: 25px;
    }

    .info-card-icon {
        font-size: 1.5rem;
        margin-bottom: 8px;
        opacity: 0.9;
    }

    .info-card-title {
        font-weight: 600;
        color: var(--text-primary);
        margin-bottom: 5px;
    }

    .info-card-text {
        color: var(--text-secondary);
        font-size: 0.9rem;
    }

    /* Divider */
    .form-divider {
        height: 2px;
        background: linear-gradient(90deg, transparent, var(--medium-gray), transparent);
        margin: 40px 0;
        border: none;
    }

    /* Price Grid Special Styling */
    .price-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 20px;
        margin-bottom: 25px;
    }

    .price-item {
        background: white;
        border: 2px solid var(--medium-gray);
        border-radius: 10px;
        padding: 20px;
        transition: var(--transition);
        position: relative;
        overflow: hidden;
    }

        .price-item::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 3px;
            background: linear-gradient(90deg, var(--primary-color), var(--secondary-color));
            transform: scaleX(0);
            transition: var(--transition);
        }

        .price-item:hover {
            border-color: var(--primary-color);
            box-shadow: var(--shadow-md);
            transform: translateY(-3px);
        }

            .price-item:hover::before {
                transform: scaleX(1);
            }

    .price-label {
        display: flex;
        align-items: center;
        gap: 6px;
        font-weight: 600;
        color: var(--text-primary);
        margin-bottom: 10px;
        font-size: 0.9rem;
    }

    .price-label-icon {
        font-size: 1.1rem;
        opacity: 0.8;
    }

    /* Button Styling */
    .btn {
        padding: 14px 32px;
        font-size: 1rem;
        font-weight: 600;
        border-radius: 10px;
        border: none;
        cursor: pointer;
        transition: var(--transition);
        display: inline-flex;
        align-items: center;
        gap: 10px;
        text-decoration: none;
        box-shadow: var(--shadow-md);
    }

        .btn:hover {
            transform: translateY(-2px);
            box-shadow: var(--shadow-lg);
        }

        .btn:active {
            transform: translateY(0);
        }

    .btn-primary {
        background: linear-gradient(135deg, var(--primary-color), var(--primary-light));
        color: white;
    }

        .btn-primary:hover {
            background: linear-gradient(135deg, var(--primary-dark), var(--primary-color));
            color: white;
        }

    .btn-secondary {
        background: var(--medium-gray);
        color: var(--text-primary);
    }

        .btn-secondary:hover {
            background: var(--text-secondary);
            color: white;
        }

    .button-group {
        display: flex;
        gap: 15px;
        margin-top: 30px;
        padding-top: 30px;
        border-top: 2px solid var(--light-gray);
    }

    /* Responsive Design */
    @@media (max-width: 768px) {
        .tour-form-container {
            padding: 20px 10px;
        }

        .form-header {
            padding: 20px;
        }

            .form-header h2 {
                font-size: 1.8rem;
            }

        .form-main-card {
            padding: 20px;
        }

        .section-title {
            font-size: 1.2rem;
        }

        .button-group {
            flex-direction: column;
        }

        .btn {
            width: 100%;
            justify-content: center;
        }

        .price-grid {
            grid-template-columns: 1fr;
        }
    }

    /* Loading State */
    .form-loading {
        pointer-events: none;
        opacity: 0.6;
        position: relative;
    }

        .form-loading::after {
            content: '';
            position: absolute;
            top: 50%;
            left: 50%;
            width: 40px;
            height: 40px;
            border: 4px solid var(--light-gray);
            border-top-color: var(--primary-color);
            border-radius: 50%;
            animation: spin 0.8s linear infinite;
        }

    @@keyframes spin {
        to {
            transform: translate(-50%, -50%) rotate(360deg);
        }
    }

    /* Select Dropdown Enhancement */
    .form-select {
        background-image: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 16 16'%3e%3cpath fill='none' stroke='%232563eb' stroke-linecap='round' stroke-linejoin='round' stroke-width='2' d='M2 5l6 6 6-6'/%3e%3c/svg%3e");
        background-repeat: no-repeat;
        background-position: right 12px center;
        background-size: 16px 12px;
        padding-right: 40px;
        appearance: none;
    }

    /* Tooltip Styling */
    [data-tooltip] {
        position: relative;
        cursor: help;
    }

        [data-tooltip]::after {
            content: attr(data-tooltip);
            position: absolute;
            bottom: 100%;
            left: 50%;
            transform: translateX(-50%) translateY(-5px);
            background: var(--dark-color);
            color: white;
            padding: 8px 12px;
            border-radius: 6px;
            font-size: 0.85rem;
            white-space: nowrap;
            opacity: 0;
            pointer-events: none;
            transition: var(--transition);
            z-index: 1000;
        }

        [data-tooltip]:hover::after {
            opacity: 1;
            transform: translateX(-50%) translateY(-10px);
        }

    /* Success Message Animation */
    .success-message {
        background: linear-gradient(135deg, var(--success-color), #34d399);
        color: white;
        padding: 15px 20px;
        border-radius: 10px;
        margin-bottom: 20px;
        display: flex;
        align-items: center;
        gap: 10px;
        animation: slideDown 0.5s ease-out;
        font-weight: 500;
    }

    @@keyframes slideDown {
        from {
            opacity: 0;
            transform: translateY(-20px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    /* Validation Summary Styling */
    .validation-summary {
        background: linear-gradient(135deg, rgba(239, 68, 68, 0.1), rgba(239, 68, 68, 0.05));
        border-left: 4px solid var(--danger-color);
        padding: 20px;
        border-radius: 10px;
        margin-bottom: 25px;
    }

        .validation-summary ul {
            margin: 0;
            padding-left: 20px;
        }

        .validation-summary li {
            color: var(--danger-color);
            margin-bottom: 5px;
        }

    /* Footer Info */
    .form-footer {
        text-align: center;
        margin-top: 30px;
        color: white;
        font-size: 0.9rem;
    }

    /* Accessibility Improvements */
    .form-control:focus-visible,
    .form-select:focus-visible,
    .btn:focus-visible {
        outline: 3px solid rgba(37, 99, 235, 0.5);
        outline-offset: 2px;
    }

    /* Print Styles */
    @@media print {
        .tour-form-container {
            background: white;
            padding: 0;
        }

        .form-header,
        .form-main-card {
            box-shadow: none;
        }

        .btn {
            display: none;
        }
    }

    /* Additional Micro-interactions */
    .form-group:focus-within .form-label {
        color: var(--primary-color);
        transform: translateX(3px);
        transition: var(--transition);
    }

    .input-icon-wrapper:focus-within {
        transform: scale(1.01);
        transition: var(--transition);
    }

    /* Badge Styling for Required Fields */
    .required-badge {
        background: var(--danger-color);
        color: white;
        font-size: 0.7rem;
        padding: 2px 6px;
        border-radius: 4px;
        font-weight: 600;
        margin-left: 5px;
    }

    /* Custom Scrollbar */
    .form-main-card {
        max-height: 85vh;
        overflow-y: auto;
    }

        .form-main-card::-webkit-scrollbar {
            width: 8px;
        }

        .form-main-card::-webkit-scrollbar-track {
            background: var(--light-gray);
            border-radius: 10px;
        }

        .form-main-card::-webkit-scrollbar-thumb {
            background: linear-gradient(180deg, var(--primary-color), var(--secondary-color));
            border-radius: 10px;
        }

            .form-main-card::-webkit-scrollbar-thumb:hover {
                background: linear-gradient(180deg, var(--primary-dark), var(--primary-color));
            }
</style>

<div class="tour-form-container">
    <div class="form-wrapper">
        <!-- Header Section -->
        <div class="form-header">
            <h2>Thêm tour mới</h2>
            <p class="form-subtitle">Điền đầy đủ thông tin để tạo một tour du lịch hấp dẫn</p>
        </div>

        <!-- Main Form -->
        <div class="form-main-card">
            <form asp-action="ThemTour" method="post" enctype="multipart/form-data">
                <div asp-validation-summary="All" class="validation-summary text-danger"></div>

                <!-- Section 1: Thông tin cơ bản -->
                <div class="section-header">
                    <div class="section-icon">📋</div>
                    <h3 class="section-title">Thông tin cơ bản</h3>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="MaTour" class="form-label">Mã Tour</label>
                            <div class="input-icon-wrapper">
                                <input asp-for="MaTour" class="form-control" placeholder="Nhập mã tour duy nhất" />
                                <span class="input-icon">🔑</span>
                            </div>
                            <span asp-validation-for="MaTour" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="TenTour" class="form-label">Tên Tour</label>
                            <div class="input-icon-wrapper">
                                <input asp-for="TenTour" class="form-control" placeholder="Nhập tên tour hấp dẫn" />
                                <span class="input-icon">🏖️</span>
                            </div>
                            <span asp-validation-for="TenTour" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="LoaiTourId" class="form-label">Loại tour</label>
                            <div class="input-icon-wrapper">
                                <select asp-for="LoaiTourId"
                                        asp-items="@(ViewBag.LoaiTours)"
                                        class="form-select">
                                    <option value="">-- Chọn loại tour --</option>
                                </select>
                                <span class="input-icon">🗂️</span>
                            </div>
                            <span asp-validation-for="LoaiTourId" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="MoTaNgan" class="form-label">Mô tả ngắn</label>
                            <textarea asp-for="MoTaNgan" class="form-control" rows="8" placeholder="Viết mô tả ngắn gọn, thu hút về tour..."></textarea>
                        </div>
                    </div>
                </div>

                <hr class="form-divider" />

                <!-- Section 2: Địa điểm & Thời gian -->
                <div class="section-header">
                    <div class="section-icon">📍</div>
                    <h3 class="section-title">Địa điểm & Thời gian</h3>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="DiemKhoiHanh" class="form-label">Điểm khởi hành</label>
                            <div class="input-icon-wrapper">
                                <input asp-for="DiemKhoiHanh" class="form-control" placeholder="Ví dụ: Hà Nội, TP.HCM..." />
                                <span class="input-icon">🚩</span>
                            </div>
                            <span asp-validation-for="DiemKhoiHanh" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="DiemDen" class="form-label">Điểm đến</label>
                            <div class="input-icon-wrapper">
                                <input asp-for="DiemDen" class="form-control" placeholder="Ví dụ: Đà Nẵng, Phú Quốc..." />
                                <span class="input-icon">🎯</span>
                            </div>
                            <span asp-validation-for="DiemDen" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="NgayKhoiHanh" class="form-label">Ngày khởi hành</label>
                            <div class="input-icon-wrapper">
                                <input asp-for="NgayKhoiHanh" class="form-control" type="date" />
                                <span class="input-icon">📅</span>
                            </div>
                            <span asp-validation-for="NgayKhoiHanh" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="ThoiGian" class="form-label">Thời gian</label>
                            <div class="input-icon-wrapper">
