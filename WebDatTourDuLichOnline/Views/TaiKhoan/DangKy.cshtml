@model WebDatTourDuLichOnline.Models.DangKyViewModel

@{
    ViewData["Title"] = "Đăng ký tài khoản";
    Layout = null; // Không dùng layout chính
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WebDatTourDuLichOnline</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/auth.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
</head>
<body>
    <!-- Hero Section với ảnh nền -->
    <div class="auth-hero">
        <img src="~/images/hero/dk.jpg" alt="Travel" class="auth-hero__bg">
        <div class="auth-hero__overlay"></div>
    </div>

    <!-- Container chính -->
    <div class="container auth-container">
        <div class="row justify-content-center">
            <div class="col-lg-10 col-xl-9">
                <div class="card auth-card shadow-lg">
                    <div class="row g-0">
                        <!-- Left Side - Thông tin -->
                        <div class="col-lg-5 auth-left">
                            <div class="auth-left-content">
                                <div class="auth-brand mb-4">
                                    <i class="bi bi-compass"></i>
                                    <h3>TourVietPlus</h3>
                                </div>

                                <h2 class="auth-welcome mb-3">
                                    Chào mừng đến với chúng tôi! ✈️
                                </h2>

                                <p class="auth-description mb-4">
                                    Tạo tài khoản để khám phá hàng nghìn tour du lịch tuyệt vời, nhận ưu đãi độc quyền và quản lý đặt chỗ dễ dàng.
                                </p>

                                <div class="auth-features">
                                    <div class="feature-item">
                                        <i class="bi bi-check-circle-fill"></i>
                                        <span>Đặt tour nhanh chóng & dễ dàng</span>
                                    </div>
                                    <div class="feature-item">
                                        <i class="bi bi-check-circle-fill"></i>
                                        <span>Giá tốt nhất thị trường</span>
                                    </div>
                                    <div class="feature-item">
                                        <i class="bi bi-check-circle-fill"></i>
                                        <span>Ưu đãi độc quyền cho thành viên</span>
                                    </div>
                                    <div class="feature-item">
                                        <i class="bi bi-check-circle-fill"></i>
                                        <span>Hỗ trợ 24/7</span>
                                    </div>
                                </div>

                                <div class="auth-illustration">
                                    <i class="bi bi-globe2"></i>
                                </div>
                            </div>
                        </div>

                        <!-- Right Side - Form đăng ký -->
                        <div class="col-lg-7 auth-right">
                            <div class="auth-form-wrapper">
                                <div class="auth-header mb-4">
                                    <h2 class="auth-title">Đăng Ký Tài Khoản</h2>
                                    <p class="auth-subtitle">Điền thông tin để bắt đầu hành trình</p>
                                </div>

                                <!-- Alert nếu có lỗi -->
                                @if (ViewData.ModelState.ErrorCount > 0)
                                {
                                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                        <i class="bi bi-exclamation-triangle-fill me-2"></i>
                                        <div asp-validation-summary="ModelOnly"></div>
                                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                                    </div>
                                }

                                <!-- Form đăng ký -->
                                <form asp-action="DangKy" method="post" class="auth-form">
                                    <div class="row g-3">
                                        <!-- Họ tên -->
                                        <div class="col-12">
                                            <div class="form-floating">
                                                <input asp-for="HoTen"
                                                       class="form-control"
                                                       id="hoTen"
                                                       placeholder="Họ và tên"
                                                       autocomplete="name" />
                                                <label for="hoTen">
                                                    <i class="bi bi-person me-2"></i>Họ và tên
                                                </label>
                                                <span asp-validation-for="HoTen" class="text-danger"></span>
                                            </div>
                                        </div>

                                        <!-- Email & Số điện thoại -->
                                        <div class="col-md-6">
                                            <div class="form-floating">
                                                <input asp-for="Email"
                                                       class="form-control"
                                                       id="email"
                                                       placeholder="Email"
                                                       autocomplete="email" />
                                                <label for="email">
                                                    <i class="bi bi-envelope me-2"></i>Email
                                                </label>
                                                <span asp-validation-for="Email" class="text-danger"></span>
                                            </div>
                                        </div>

                                        <div class="col-md-6">
                                            <div class="form-floating">
                                                <input asp-for="SoDienThoai"
                                                       class="form-control"
                                                       id="soDienThoai"
                                                       placeholder="Số điện thoại"
                                                       autocomplete="tel" />
                                                <label for="soDienThoai">
                                                    <i class="bi bi-telephone me-2"></i>Số điện thoại
                                                </label>
                                                <span asp-validation-for="SoDienThoai" class="text-danger"></span>
                                            </div>
                                        </div>

                                        <!-- Địa chỉ -->
                                        <div class="col-12">
                                            <div class="form-floating">
                                                <input asp-for="DiaChi"
                                                       class="form-control"
                                                       id="diaChi"
                                                       placeholder="Địa chỉ"
                                                       autocomplete="street-address" />
                                                <label for="diaChi">
                                                    <i class="bi bi-geo-alt me-2"></i>Địa chỉ
                                                </label>
                                                <span asp-validation-for="DiaChi" class="text-danger"></span>
                                            </div>
                                        </div>

                                        <!-- Tên đăng nhập -->
                                        <div class="col-12">
                                            <div class="form-floating">
                                                <input asp-for="TenDangNhap"
                                                       class="form-control"
                                                       id="tenDangNhap"
                                                       placeholder="Tên đăng nhập"
                                                       autocomplete="username" />
                                                <label for="tenDangNhap">
                                                    <i class="bi bi-person-badge me-2"></i>Tên đăng nhập
                                                </label>
                                                <span asp-validation-for="TenDangNhap" class="text-danger"></span>
                                            </div>
                                        </div>

                                        <!-- Mật khẩu -->
                                        <div class="col-md-6">
                                            <div class="form-floating password-field">
                                                <input asp-for="MatKhau"
                                                       type="password"
                                                       class="form-control"
                                                       id="matKhau"
                                                       placeholder="Mật khẩu"
                                                       autocomplete="new-password" />
                                                <label for="matKhau">
                                                    <i class="bi bi-lock me-2"></i>Mật khẩu
                                                </label>
                                                <button type="button" class="password-toggle" onclick="togglePasswordField('matKhau')">
                                                    <i class="bi bi-eye"></i>
                                                </button>
                                                <span asp-validation-for="MatKhau" class="text-danger"></span>
                                            </div>
                                        </div>

                                        <div class="col-md-6">
                                            <div class="form-floating password-field">
                                                <input asp-for="XacNhanMatKhau"
                                                       type="password"
                                                       class="form-control"
                                                       id="xacNhanMatKhau"
                                                       placeholder="Xác nhận mật khẩu"
                                                       autocomplete="new-password" />
                                                <label for="xacNhanMatKhau">
                                                    <i class="bi bi-lock-fill me-2"></i>Xác nhận mật khẩu
                                                </label>
                                                <button type="button" class="password-toggle" onclick="togglePasswordField('xacNhanMatKhau')">
                                                    <i class="bi bi-eye"></i>
                                                </button>
                                                <span asp-validation-for="XacNhanMatKhau" class="text-danger"></span>
                                            </div>
                                        </div>
                                    </div>

                                    <!-- Terms checkbox -->
                                    <div class="form-check mt-3">
                                        <input class="form-check-input" type="checkbox" id="agreeTerms" required>
                                        <label class="form-check-label" for="agreeTerms">
                                            Tôi đồng ý với <a href="#" class="auth-link">Điều khoản dịch vụ</a>
                                            và <a href="#" class="auth-link">Chính sách bảo mật</a>
                                        </label>
                                    </div>

                                    <!-- Nút đăng ký -->
                                    <button type="submit" class="btn btn-auth btn-primary w-100 mt-4 mb-3">
                                        <i class="bi bi-person-plus me-2"></i>Đăng ký ngay
                                    </button>

                                    <!-- Hoặc -->
                                    <div class="auth-divider">
                                        <span>Hoặc đăng ký với</span>
                                    </div>

                                    <!-- Social Login -->
                                    <div class="social-login mb-4">
                                        <button type="button" class="btn btn-social btn-google">
                                            <i class="bi bi-google me-2"></i>Google
                                        </button>
                                        <button type="button" class="btn btn-social btn-facebook">
                                            <i class="bi bi-facebook me-2"></i>Facebook
                                        </button>
                                    </div>

                                    <!-- Link đăng nhập -->
                                    <div class="text-center">
                                        <p class="auth-link-text mb-0">
                                            Đã có tài khoản?
                                            <a asp-action="DangNhap" class="auth-link">Đăng nhập ngay</a>
                                        </p>
                                    </div>
                                </form>

                                <!-- Quay về trang chủ -->
                                <div class="text-center mt-4">
                                    <a asp-controller="Home" asp-action="Index" class="auth-link">
                                        <i class="bi bi-arrow-left me-2"></i>Quay về trang chủ
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Script hiện/ẩn mật khẩu -->
    <script>
        function togglePasswordField(fieldId) {
            const passwordInput = document.getElementById(fieldId);
            const button = passwordInput.parentElement.querySelector('.password-toggle');
            const icon = button.querySelector('i');

            if (passwordInput.type === 'password') {
                passwordInput.type = 'text';
                icon.classList.remove('bi-eye');
                icon.classList.add('bi-eye-slash');
            } else {
                passwordInput.type = 'password';
                icon.classList.remove('bi-eye-slash');
                icon.classList.add('bi-eye');
            }
        }

        // Loading animation khi submit
        document.querySelector('.auth-form').addEventListener('submit', function () {
            const btn = this.querySelector('.btn-auth');
            btn.classList.add('loading');
            btn.disabled = true;
        });
    </script>

    @await Html.PartialAsync("_ValidationScriptsPartial")
</body>
</html>
