@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        (function () {
            // Lấy giá từ server
            const giaNguoiLon = parseFloat('@Model.GiaNguoiLon.ToString(System.Globalization.CultureInfo.InvariantCulture)');
            const giaTreEm = parseFloat('@Model.GiaTreEm.ToString(System.Globalization.CultureInfo.InvariantCulture)');
            const soChoConLai = parseInt('@Model.SoChoConLai');

            // Elements
            const inputNguoiLon = document.getElementById("SoNguoiLon");
            const inputTreEm = document.getElementById("SoTreEm");
            const inputTongTien = document.getElementById("TongTien");

            const btnDecreaseAdult = document.getElementById("decreaseAdult");
            const btnIncreaseAdult = document.getElementById("increaseAdult");
            const btnDecreaseChild = document.getElementById("decreaseChild");
            const btnIncreaseChild = document.getElementById("increaseChild");

            // Display elements
            const displayAdultQty = document.getElementById("displayAdultQty");
            const displayChildQty = document.getElementById("displayChildQty");
            const displaySubTotal = document.getElementById("displaySubTotal");
            const displayTotalPrice = document.getElementById("displayTotalPrice");

            // Format number to VND
            function formatVND(number) {
                return new Intl.NumberFormat('vi-VN').format(number);
            }

            // Calculate and update total
            function capNhatTongTien() {
                const soNL = parseInt(inputNguoiLon.value) || 0;
                const soTE = parseInt(inputTreEm.value) || 0;
                const total = soNL * giaNguoiLon + soTE * giaTreEm;

                inputTongTien.value = Math.round(total);

                // Update display
                displayAdultQty.textContent = soNL;
                displayChildQty.textContent = soTE;
                displaySubTotal.textContent = formatVND(Math.round(total)) + ' đ';
                displayTotalPrice.textContent = formatVND(Math.round(total)) + ' đ';

                // Update button states
                const tongKhach = soNL + soTE;
                btnIncreaseAdult.disabled = tongKhach >= soChoConLai;
                btnIncreaseChild.disabled = tongKhach >= soChoConLai;
                btnDecreaseAdult.disabled = soNL <= 1;
                btnDecreaseChild.disabled = soTE <= 0;
            }

            // Event listeners for adult
            btnIncreaseAdult.addEventListener("click", function() {
                let current = parseInt(inputNguoiLon.value) || 1;
                const tongKhach = current + parseInt(inputTreEm.value || 0);
                if (tongKhach < soChoConLai) {
                    inputNguoiLon.value = current + 1;
                    capNhatTongTien();
                }
            });

            btnDecreaseAdult.addEventListener("click", function() {
                let current = parseInt(inputNguoiLon.value) || 1;
                if (current > 1) {
                    inputNguoiLon.value = current - 1;
                    capNhatTongTien();
                }
            });

            // Event listeners for child
            btnIncreaseChild.addEventListener("click", function() {
                let current = parseInt(inputTreEm.value) || 0;
                const tongKhach = parseInt(inputNguoiLon.value || 1) + current;
                if (tongKhach < soChoConLai) {
                    inputTreEm.value = current + 1;
                    capNhatTongTien();
                }
            });

            btnDecreaseChild.addEventListener("click", function() {
                let current = parseInt(inputTreEm.value) || 0;
                if (current > 0) {
                    inputTreEm.value = current - 1;
                    capNhatTongTien();
                }
            });

            // Initial calculation
            capNhatTongTien();

            // Form submission animation
            document.getElementById("bookingForm").addEventListener("submit", function() {
                document.getElementById("btnConfirm").innerHTML = '<span class="spinner-border spinner-border-sm me-2"></span>Đang xử lý...';
                document.getElementById("btnConfirm").disabled = true;
            });
        })();
    </script>
}