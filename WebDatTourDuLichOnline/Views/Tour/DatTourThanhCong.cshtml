            }

        .badge-status {
            display: inline-flex;
            align-items: center;
            padding: 0.5rem 1rem;
            border-radius: 50px;
            font-size: 0.875rem;
            font-weight: 600;
        }

            .badge-status.success {
                background: rgba(34, 197, 94, 0.1);
