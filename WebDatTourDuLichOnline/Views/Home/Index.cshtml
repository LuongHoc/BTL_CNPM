                margin-top: 40px;
                padding: 2rem 0;
            }

            .stat-item {
                flex-direction: column;
                text-align: center;
            }

            .stat-icon-wrapper {
                width: 60px;
                height: 60px;
            }

            .stat-icon {
                font-size: 1.75rem;
            }

            .stat-content {
                text-align: center;
            }

            .stat-number {
                font-size: 1.25rem;
            }
        }

        @@media (max-width: 576px) {
            #heroCarousel {
                height: 400px;
            }

            .hero-title {
                font-size: 1.75rem;
            }

            .hero-subtitle {
                font-size: 0.95rem;
            }

            .search-box-premium {
                border-radius: 16px;
            }
        }
    </style>
}