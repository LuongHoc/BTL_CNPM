@model IEnumerable<WebDatTourDuLichOnline.Models.Tour>

@{
    ViewData["Title"] = "Đặt tour du lịch online";
}

<!-- Hero Carousel Section -->
<div class="hero-carousel-wrapper">
    <div id="heroCarousel" class="carousel slide carousel-fade" data-bs-ride="carousel" data-bs-interval="5000">
        <div class="carousel-indicators">
            <button type="button" data-bs-target="#heroCarousel" data-bs-slide-to="0" class="active"></button>
            <button type="button" data-bs-target="#heroCarousel" data-bs-slide-to="1"></button>
            <button type="button" data-bs-target="#heroCarousel" data-bs-slide-to="2"></button>
        </div>

        <div class="carousel-inner">
            <!-- Slide 1 -->
            <div class="carousel-item active">
                <img src="~/images/hero/hero-1.jpg" class="d-block w-100" alt="Du lịch">
                <div class="carousel-overlay"></div>
                <div class="carousel-caption-custom">
                    <div class="container">
                        <h1 class="hero-title animate-fade-up">Hơn 1000+ Tour, Khám Phá Ngay</h1>
                        <p class="hero-subtitle animate-fade-up-delay">Giá tốt — Hỗ trợ 24/7 — Khởi hành hàng ngày</p>
                        <div class="hero-badge animate-fade-up-delay-2">
                            <i class="bi bi-star-fill"></i> 54 khách đặt trong 24h
                        </div>
                    </div>
                </div>
            </div>

            <!-- Slide 2 -->
            <div class="carousel-item">
                <img src="~/images/hero/hero-2.jpg" class="d-block w-100" alt="Du lịch">
                <div class="carousel-overlay"></div>
                <div class="carousel-caption-custom">
                    <div class="container">
                        <h1 class="hero-title animate-fade-up">Trải Nghiệm Du Lịch Đẳng Cấp</h1>
                        <p class="hero-subtitle animate-fade-up-delay">Đặt tour nhanh chóng — Thanh toán tiện lợi</p>
                        <div class="hero-badge animate-fade-up-delay-2">
                            <i class="bi bi-award-fill"></i> 10K+ đánh giá 5 sao
                        </div>
                    </div>
                </div>
            </div>

            <!-- Slide 3 -->
            <div class="carousel-item">
                <img src="~/images/hero/hero-3.jpg" class="d-block w-100" alt="Du lịch">
                <div class="carousel-overlay"></div>
                <div class="carousel-caption-custom">
                    <div class="container">
                        <h1 class="hero-title animate-fade-up">Khám Phá Thế Giới Cùng Chúng Tôi</h1>
                        <p class="hero-subtitle animate-fade-up-delay">Ưu đãi đặc biệt — Xác nhận tức thì</p>
                        <div class="hero-badge animate-fade-up-delay-2">
                            <i class="bi bi-people-fill"></i> 100+ Ưu đãi mỗi ngày
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Search Box Overlay - THIẾT KẾ MỚI -->
        <div class="hero-search-overlay">
            <div class="container">
                <div class="search-box-premium">
                    <form asp-action="Index" method="get">
                        <div class="search-grid">
                            <!-- Tìm kiếm chung -->
                            <div class="search-field">
                                <div class="field-icon">
                                    <i class="bi bi-search"></i>
                                </div>
                                <div class="field-content">
                                    <label class="field-label">Bạn muốn đi đâu?</label>
                                    <input type="text"
                                           name="tuKhoa"
                                           value="@Context.Request.Query["tuKhoa"]"
                                           class="field-input"
                                           placeholder="Tìm kiếm tour, địa điểm...">
                                </div>
                            </div>

                            <!-- Điểm khởi hành -->
                            <div class="search-field">
                                <div class="field-icon">
                                    <i class="bi bi-geo-alt"></i>
                                </div>
                                <div class="field-content">
                                    <label class="field-label">Nơi khởi hành</label>
                                    <input type="text"
                                           name="diemKhoiHanh"
                                           value="@Context.Request.Query["diemKhoiHanh"]"
                                           class="field-input"
                                           placeholder="Hà Nội, TP.HCM...">
                                </div>
                            </div>

                            <!-- Điểm đến -->
                            <div class="search-field">
                                <div class="field-icon">
                                    <i class="bi bi-pin-map"></i>
                                </div>
                                <div class="field-content">
                                    <label class="field-label">Điểm đến</label>
                                    <input type="text"
                                           name="diemDen"
                                           value="@Context.Request.Query["diemDen"]"
                                           class="field-input"
                                           placeholder="Đà Nẵng, Phú Quốc...">
                                </div>
                            </div>

                            <!-- Ngày khởi hành -->
                            <div class="search-field">
                                <div class="field-icon">
                                    <i class="bi bi-calendar-event"></i>
                                </div>
                                <div class="field-content">
                                    <label class="field-label">Ngày khởi hành</label>
                                    <input type="date"
                                           name="ngayKhoiHanh"
                                           value="@Context.Request.Query["ngayKhoiHanh"]"
                                           class="field-input">
                                </div>
                            </div>

                            <!-- Nút tìm kiếm -->
                            <div class="search-button-wrapper">
                                <button type="submit" class="btn-search-premium">
                                    <i class="bi bi-search"></i>
                                    <span>Tìm kiếm</span>
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Stats Section -->
    <div class="stats-section">
        <div class="container">
            <div class="row g-4">
                <div class="col-md-4">
                    <div class="stat-item">
                        <div class="stat-icon-wrapper">
                            <i class="bi bi-compass stat-icon"></i>
                        </div>
                        <div class="stat-content">
                            <div class="stat-number">1,000+ tours</div>
                            <div class="stat-label">Giá tuyệt vời mọi nước</div>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="stat-item">
                        <div class="stat-icon-wrapper">
                            <i class="bi bi-star-fill stat-icon"></i>
                        </div>
                        <div class="stat-content">
                            <div class="stat-number">10K+ đánh giá 5 sao</div>
                            <div class="stat-label">Từ những khách hàng đã đi với chúng tôi</div>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="stat-item">
                        <div class="stat-icon-wrapper">
                            <i class="bi bi-headset stat-icon"></i>
                        </div>
                        <div class="stat-content">
                            <div class="stat-number">100+ ưu đãi mỗi ngày</div>
                            <div class="stat-label">Cho khách đi sớm, theo nhóm, phút chót</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Tour List Section -->
<div class="container mb-5">
    <div class="section-header mb-5">
        <h2 class="section-title">Tours du lịch bạn đã xem gần đây</h2>
        <p class="section-subtitle">Khám phá những điểm đến tuyệt vời</p>
    </div>

@if (!Model.Any())
{
        <div class="empty-result">
            <div class="empty-icon">
                <i class="bi bi-inbox"></i>
            </div>
            <h4 class="empty-title">Không tìm thấy tour phù hợp</h4>
            <p class="empty-text">Vui lòng thử lại với điều kiện khác hoặc xóa bộ lọc</p>
        </div>
}
else
{
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
            @foreach (var tour in Model)
            {
                <div class="col">
                    <div class="card tour-card h-100">
                        @* --- PHẦN CARD TOUR CŨ CỦA BẠN (Hình, tên, giá, nút Xem chi tiết / Đặt tour) GIỮ NGUYÊN --- *@
                        @if (!string.IsNullOrEmpty(tour.HinhAnh))
                        {
                            <div class="tour-image-wrapper">
                                <img src="~/images/tours/@tour.HinhAnh" class="card-img-top tour-image" alt="@tour.TenTour" />
                                @if (tour.SoChoConLai < 5)
                                {
                                    <span class="tour-badge badge-hot">
                                        <i class="bi bi-fire"></i> Sắp hết chỗ
                                    </span>
                                }
                            </div>
                        }
                        else
                        {
                            <div class="tour-image-wrapper no-image">
                                <div class="tour-image-placeholder">
                                    <i class="bi bi-image"></i>
                                </div>
                            </div>
                        }
                        <div class="card-body">
                            <h5 class="card-title">@tour.TenTour</h5>
                            <div class="tour-info mb-2">
                                <i class="bi bi-geo-alt text-primary me-1"></i>
                                <span class="text-muted">@tour.DiemKhoiHanh → @tour.DiemDen</span>
                            </div>
                            <div class="tour-info mb-2">
                                <i class="bi bi-calendar3 text-primary me-1"></i>
                                <span><strong>Khởi hành:</strong> @tour.NgayKhoiHanh.ToString("dd/MM/yyyy")</span>
                            </div>
                            <div class="tour-price">
                                <span class="price-label">Giá từ:</span>
                                <span class="price-value">@tour.GiaNguoiLon.ToString("N0") đ</span>
                            </div>
                            <div class="tour-seats">
                                <i class="bi bi-people-fill text-muted me-1"></i>
                                <span class="text-muted small">Còn lại: @tour.SoChoConLai/@tour.SoCho chỗ</span>
                            </div>
                        </div>
                        <div class="card-footer bg-white border-0 pt-0">
                            <div class="d-grid gap-2">
                                <a asp-controller="Tour" asp-action="ChiTiet" asp-route-id="@tour.TourId"
                                   class="btn btn-outline-primary btn-sm">
                                    <i class="bi bi-eye me-1"></i> Xem chi tiết
                                </a>
                                <a asp-controller="Tour" asp-action="DatTour" asp-route-id="@tour.TourId"
                                   class="btn btn-primary btn-sm">
                                    <i class="bi bi-cart-plus me-1"></i> Đặt tour
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
}

@{
    int currentPage = ViewBag.CurrentPage != null ? (int)ViewBag.CurrentPage : 1;
    int totalPages = ViewBag.TotalPages != null ? (int)ViewBag.TotalPages : 1;
    int startPage = Math.Max(1, currentPage - 2);
    int endPage = Math.Min(totalPages, currentPage + 2);
}

@if (totalPages > 1)
{
        <nav class="mt-4">
            <ul class="pagination justify-content-center tour-pagination">

                <!-- Previous -->
                <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                    <a class="page-link"
                       asp-action="Index"
                       asp-route-page="@(currentPage - 1)"
                       asp-route-tuKhoa="@(ViewBag.TuKhoa)"
                       asp-route-diemKhoiHanh="@(ViewBag.DiemKhoiHanh)"
                       asp-route-diemDen="@(ViewBag.DiemDen)"
                       asp-route-ngayKhoiHanh="@(ViewBag.NgayKhoiHanh)">
                        &laquo;
                    </a>
                </li>

                @* Trang 1 + ... nếu cần *@
                @if (startPage > 1)
                {
                    <li class="page-item @(currentPage == 1 ? "active" : "")">
                        <a class="page-link"
                           asp-action="Index"
                           asp-route-page="1"
                           asp-route-tuKhoa="@(ViewBag.TuKhoa)"
                           asp-route-diemKhoiHanh="@(ViewBag.DiemKhoiHanh)"
                           asp-route-diemDen="@(ViewBag.DiemDen)"
                           asp-route-ngayKhoiHanh="@(ViewBag.NgayKhoiHanh)">1</a>
                    </li>

                    @if (startPage > 2)
                    {
                        <li class="page-item disabled">
                            <span class="page-link">...</span>
                        </li>
                    }
                }

                @* Các trang ở giữa *@
                @for (int i = startPage; i <= endPage; i++)
                {
                    <li class="page-item @(i == currentPage ? "active" : "")">
                        <a class="page-link"
                           asp-action="Index"
                           asp-route-page="@i"
                           asp-route-tuKhoa="@(ViewBag.TuKhoa)"
                           asp-route-diemKhoiHanh="@(ViewBag.DiemKhoiHanh)"
                           asp-route-diemDen="@(ViewBag.DiemDen)"
                           asp-route-ngayKhoiHanh="@(ViewBag.NgayKhoiHanh)">@i</a>
                    </li>
                }

                @* ... + trang cuối nếu cần *@
                @if (endPage < totalPages)
                {
                    @if (endPage < totalPages - 1)
                    {
                        <li class="page-item disabled">
                            <span class="page-link">...</span>
                        </li>
                    }

                    <li class="page-item @(currentPage == totalPages ? "active" : "")">
                        <a class="page-link"
                           asp-action="Index"
                           asp-route-page="@totalPages"
                           asp-route-tuKhoa="@(ViewBag.TuKhoa)"
                           asp-route-diemKhoiHanh="@(ViewBag.DiemKhoiHanh)"
                           asp-route-diemDen="@(ViewBag.DiemDen)"
                           asp-route-ngayKhoiHanh="@(ViewBag.NgayKhoiHanh)">@totalPages</a>
                    </li>
                }

                <!-- Next -->
                <li class="page-item @(currentPage == totalPages ? "disabled" : "")">
                    <a class="page-link"
                       asp-action="Index"
                       asp-route-page="@(currentPage + 1)"
                       asp-route-tuKhoa="@(ViewBag.TuKhoa)"
                       asp-route-diemKhoiHanh="@(ViewBag.DiemKhoiHanh)"
                       asp-route-diemDen="@(ViewBag.DiemDen)"
                       asp-route-ngayKhoiHanh="@(ViewBag.NgayKhoiHanh)">
                        &raquo;
                    </a>
                </li>
            </ul>
        </nav>
}


@section Styles {
    <style>
        /* ====== SEARCH BOX PREMIUM DESIGN ====== */
        .hero-search-overlay {
            position: absolute;
            bottom: -60px;
            left: 0;
            right: 0;
            z-index: 100;
        }

        .search-box-premium {
            background: #fff;
            border-radius: 20px;
            padding: 1.5rem;
            box-shadow: 0 20px 60px rgba(0, 0, 0, 0.15);
            backdrop-filter: blur(10px);
        }

        .search-grid {
            display: grid;
            grid-template-columns: repeat(4, 1fr) auto;
            gap: 1px;
            background: #e2e8f0;
            border-radius: 16px;
            overflow: hidden;
        }

        .search-field {
            display: flex;
            align-items: center;
            gap: 1rem;
            padding: 1.25rem 1.5rem;
            background: #fff;
            transition: all 0.3s ease;
            position: relative;
        }

            .search-field:hover {
                background: #f8fafc;
            }

            .search-field:not(:last-child)::after {
                content: '';
                position: absolute;
                right: 0;
                top: 20%;
                bottom: 20%;
                width: 1px;
                background: #e2e8f0;
            }

        .field-icon {
            font-size: 1.5rem;
            color: #0d6efd;
            flex-shrink: 0;
        }

        .field-content {
            flex: 1;
            min-width: 0;
        }

        .field-label {
            display: block;
            font-size: 0.75rem;
            font-weight: 600;
            color: #64748b;
            margin-bottom: 0.25rem;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        .field-input {
            width: 100%;
            border: none;
            outline: none;
            font-size: 0.95rem;
            font-weight: 500;
            color: #1e293b;
            background: transparent;
            padding: 0;
        }

            .field-input::placeholder {
                color: #cbd5e1;
            }

            .field-input:focus {
                color: #0d6efd;
            }

        .search-button-wrapper {
            background: #fff;
            padding: 0.75rem;
            display: flex;
            align-items: center;
        }

        .btn-search-premium {
            background: linear-gradient(135deg, #0d6efd 0%, #0b5ed7 100%);
            border: none;
            border-radius: 12px;
            color: #fff;
            font-weight: 600;
            font-size: 1rem;
            padding: 1rem 2rem;
            display: flex;
            align-items: center;
            gap: 0.5rem;
            cursor: pointer;
            transition: all 0.3s ease;
            box-shadow: 0 8px 20px rgba(13, 110, 253, 0.3);
            white-space: nowrap;
        }

            .btn-search-premium:hover {
                transform: translateY(-2px);
                box-shadow: 0 12px 30px rgba(13, 110, 253, 0.4);
            }

            .btn-search-premium:active {
                transform: translateY(0);
            }

            .btn-search-premium i {
                font-size: 1.2rem;
            }

        /* ====== STATS SECTION IMPROVED ====== */
        .stats-section {
            background: #fff;
            padding: 4rem 0;
            margin-top: 80px;
            border-top: 1px solid #e9ecef;
            border-bottom: 1px solid #e9ecef;
        }

        .stat-item {
            display: flex;
            align-items: center;
            gap: 1.5rem;
            padding: 1.5rem;
            background: #f8fafc;
            border-radius: 16px;
            transition: all 0.3s ease;
            border: 1px solid #e2e8f0;
        }

            .stat-item:hover {
                transform: translateY(-5px);
                box-shadow: 0 12px 30px rgba(13, 110, 253, 0.1);
                border-color: #0d6efd;
            }

        .stat-icon-wrapper {
            width: 70px;
            height: 70px;
            border-radius: 16px;
            background: linear-gradient(135deg, #0d6efd 0%, #0b5ed7 100%);
            display: flex;
            align-items: center;
            justify-content: center;
            flex-shrink: 0;
            box-shadow: 0 8px 20px rgba(13, 110, 253, 0.3);
        }

        .stat-icon {
            font-size: 2rem;
            color: #fff;
        }

        .stat-content {
            flex: 1;
            text-align: left;
        }

        .stat-number {
            font-size: 1.5rem;
            font-weight: 700;
            color: #1e293b;
            margin-bottom: 0.25rem;
        }

        .stat-label {
            font-size: 0.9rem;
            color: #64748b;
            line-height: 1.4;
        }

        /* ====== EMPTY RESULT ====== */
        .empty-result {
            text-align: center;
            padding: 5rem 2rem;
            background: #f8fafc;
            border-radius: 20px;
            border: 2px dashed #e2e8f0;
        }

        .empty-icon {
            font-size: 5rem;
            color: #cbd5e1;
            margin-bottom: 1.5rem;
        }

        .empty-title {
            font-size: 1.5rem;
            font-weight: 700;
            color: #1e293b;
            margin-bottom: 0.5rem;
        }

        .empty-text {
            font-size: 1rem;
            color: #64748b;
        }

