            .search-grid {
                grid-template-columns: repeat(2, 1fr);
            }

            .search-button-wrapper {
                grid-column: 1 / -1;
            }

            .btn-search-premium {
                width: 100%;
                justify-content: center;
            }
        }

        @@media (max-width: 768px) {
            .hero-search-overlay {
                position: relative;
                bottom: 0;
                margin-top: -40px;
            }

            .search-box-premium {
                padding: 1rem;
            }

            .search-grid {
                grid-template-columns: 1fr;
                gap: 0;
            }

            .search-field {
                padding: 1rem;
            }

                .search-field::after {
                    display: none;
                }

            .field-icon {
                font-size: 1.25rem;
            }

