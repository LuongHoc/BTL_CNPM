@{
    ViewData["Title"] = "Tạo đơn đặt tour hộ khách";
    var tours = ViewBag.Tours as List<WebDatTourDuLichOnline.Models.Tour> ?? new();
}

<!-- Page Header -->
<div class="page-header-create-order">
    <div class="header-content-create">
        <div class="header-icon-create">
            <i class="bi bi-plus-circle"></i>
        </div>
        <div>
            <h1 class="page-title-create">Tạo đơn đặt tour hộ khách</h1>
            <p class="page-subtitle-create">Đặt tour trực tiếp cho khách hàng tại quầy</p>
        </div>
    </div>
    <a asp-action="DanhSachDon" class="btn-back-list">
        <i class="bi bi-arrow-left me-2"></i>
        Về danh sách
    </a>
</div>

<!-- Success Message -->
@if (TempData["Message"] != null)
{
    <div class="alert-success-custom">
        <div class="alert-icon-success">
            <i class="bi bi-check-circle"></i>
        </div>
        <div class="alert-content-success">
            <strong>Thành công!</strong>
            <p>@TempData["Message"]</p>
        </div>
    </div>
}

<!-- Create Order Form -->
<div class="create-order-container">
    <form method="post" id="createOrderForm">
        <div class="row g-4">
            <!-- Customer Info Column -->
            <div class="col-lg-6">
                <div class="form-section-card">
                    <div class="form-section-header">
                        <div class="section-icon customer">
                            <i class="bi bi-person"></i>
                        </div>
                        <h3>Thông tin khách hàng</h3>
                    </div>
                    <div class="form-section-body">
                        <div class="form-group-create">
                            <label class="form-label-create">
                                <i class="bi bi-person me-2"></i>
                                Họ tên
                                <span class="required-star-create">*</span>
                            </label>
                            <input type="text" name="hoTen" class="form-input-create" placeholder="Nhập họ tên đầy đủ" required />
                        </div>

                        <div class="form-group-create">
                            <label class="form-label-create">
                                <i class="bi bi-telephone me-2"></i>
                                Số điện thoại
                                <span class="required-star-create">*</span>
                            </label>
                            <input type="text" name="soDienThoai" class="form-input-create" placeholder="0123456789" required />
                        </div>

                        <div class="form-group-create">
                            <label class="form-label-create">
                                <i class="bi bi-envelope me-2"></i>
                                Email
                            </label>
                            <input type="email" name="email" class="form-input-create" placeholder="example@email.com" />
                        </div>

                        <div class="form-group-create">
                            <label class="form-label-create">
                                <i class="bi bi-geo-alt me-2"></i>
                                Địa chỉ
                            </label>
                            <input type="text" name="diaChi" class="form-input-create" placeholder="Nhập địa chỉ" />
                        </div>
                    </div>
                </div>
            </div>

            <!-- Tour Info Column -->
            <div class="col-lg-6">
                <div class="form-section-card">
                    <div class="form-section-header">
                        <div class="section-icon tour">
                            <i class="bi bi-pin-map"></i>
                        </div>
                        <h3>Thông tin tour</h3>
                    </div>
                    <div class="form-section-body">
                        <div class="form-group-create">
                            <label class="form-label-create">
                                <i class="bi bi-pin-map me-2"></i>
                                Chọn tour
                                <span class="required-star-create">*</span>
                            </label>
                            <select name="tourId" class="form-select-create" id="tourSelect" required>
                                <option value="">-- Chọn tour --</option>
                                @foreach (var t in tours)
                                {
                                    <option value="@t.TourId"
                                            data-adultp="@t.GiaNguoiLon"
                                            data-childp="@t.GiaTreEm">
                                        @t.MaTour - @t.TenTour (@t.NgayKhoiHanh.ToString("dd/MM/yyyy"))
                                    </option>
                                }
                            </select>
                        </div>

                        <div class="row g-3">
                            <div class="col-6">
                                <div class="form-group-create">
                                    <label class="form-label-create">
                                        <i class="bi bi-person me-2"></i>
                                        Số người lớn
                                    </label>
                                    <input type="number" name="soNguoiLon" class="form-input-create" value="1" min="0" id="adultCount" onchange="calculateTotal()" />
                                </div>
                            </div>

                            <div class="col-6">
                                <div class="form-group-create">
                                    <label class="form-label-create">
                                        <i class="bi bi-person-hearts me-2"></i>
                                        Số trẻ em
                                    </label>
                                    <input type="number" name="soTreEm" class="form-input-create" value="0" min="0" id="childCount" onchange="calculateTotal()" />
                                </div>
                            </div>
                        </div>

                        <div class="form-group-create">
                            <label class="form-label-create">
                                <i class="bi bi-chat-dots me-2"></i>
                                Ghi chú
                            </label>
                            <textarea name="ghiChu" class="form-textarea-create" rows="3" placeholder="Nhập ghi chú (tùy chọn)"></textarea>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Price Summary -->
        <div class="price-summary-card">
            <div class="price-summary-header">
                <i class="bi bi-calculator me-2"></i>
                <h4>Tổng kết giá</h4>
            </div>
            <div class="price-summary-body">
                <div class="price-row">
                    <span>Giá người lớn:</span>
                    <span id="adultPrice">0 đ</span>
                </div>
                <div class="price-row">
                    <span>Giá trẻ em:</span>
                    <span id="childPrice">0 đ</span>
                </div>
                <div class="price-row total">
                    <span>Tổng tiền:</span>
                    <span id="totalPrice">0 đ</span>
                </div>
            </div>
        </div>

        <!-- Action Buttons -->
        <div class="form-actions-create">
            <a asp-action="DanhSachDon" class="btn-cancel-create">
                <i class="bi bi-x-circle me-2"></i>
                Hủy
            </a>
            <button type="submit" class="btn-submit-create">
                <i class="bi bi-check-circle me-2"></i>
                Tạo đơn
            </button>
        </div>
    </form>
</div>

<!-- Validation Errors -->
@if (!ViewData.ModelState.IsValid)
{
    <div class="validation-errors-card">
        <div class="error-icon">
            <i class="bi bi-exclamation-triangle"></i>
        </div>
        <div class="error-content">
            <h5>Có lỗi xảy ra:</h5>
            @foreach (var err in ViewData.ModelState.Values.SelectMany(v => v.Errors))
            {
                <div class="error-item">• @err.ErrorMessage</div>
            }
        </div>
    </div>
}

