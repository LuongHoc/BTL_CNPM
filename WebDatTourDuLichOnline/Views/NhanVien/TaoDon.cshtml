</style>

<script>
    // Calculate total price
    function calculateTotal() {
        const tourSelect = document.getElementById('tourSelect');
        const selectedOption = tourSelect.options[tourSelect.selectedIndex];

        const adultPrice = parseFloat(selectedOption.getAttribute('data-adultp')) || 0;
        const childPrice = parseFloat(selectedOption.getAttribute('data-childp')) || 0;

        const adultCount = parseInt(document.getElementById('adultCount').value) || 0;
        const childCount = parseInt(document.getElementById('childCount').value) || 0;

        const adultTotal = adultPrice * adultCount;
        const childTotal = childPrice * childCount;
        const total = adultTotal + childTotal;

        document.getElementById('adultPrice').textContent = adultTotal.toLocaleString('vi-VN') + ' đ';
        document.getElementById('childPrice').textContent = childTotal.toLocaleString('vi-VN') + ' đ';
        document.getElementById('totalPrice').textContent = total.toLocaleString('vi-VN') + ' đ';
    }

    // Trigger calculation on tour select
    document.getElementById('tourSelect').addEventListener('change', calculateTotal);

    // Form submission
    document.getElementById('createOrderForm').addEventListener('submit', function(e) {
        const btn = document.querySelector('.btn-submit-create');
        btn.innerHTML = '<span class="spinner-border spinner-border-sm me-2"></span>Đang tạo đơn...';
        btn.disabled = true;
    });

    // Auto-focus first input
    document.addEventListener('DOMContentLoaded', function() {
        const firstInput = document.querySelector('.form-input-create');
        if (firstInput) {
            firstInput.focus();
        }
    });
</script>