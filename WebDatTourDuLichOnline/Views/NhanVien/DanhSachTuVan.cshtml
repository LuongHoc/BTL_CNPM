    <script>
        // Auto submit khi thay đổi filter
        document.getElementById('filterStatus')?.addEventListener('change', function() {
            this.form.submit();
        });

        // Smooth scroll
        if (window.location.search.includes('trangThai=')) {
            window.scrollTo({ top: 0, behavior: 'smooth' });
        }

        // Loading state cho submit buttons
        document.querySelectorAll('.update-form').forEach(form => {
            form.addEventListener('submit', function(e) {
                const btn = this.querySelector('.btn-submit');
                btn.innerHTML = '<i class="bi bi-hourglass-split"></i> Đang lưu...';
                btn.disabled = true;
            });
        });

        // Highlight new requests
        document.querySelectorAll('.is-new').forEach((card, index) => {
            setTimeout(() => {
                card.style.animation = 'pulse 2s ease-in-out infinite';
            }, index * 100);
        });
    </script>
}
